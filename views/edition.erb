<html>
<head>
<style>
body {
	width: 374px; /* pub is 384 */
	margin-left: 10px;
	margin-right: 10px;
		font-family: 'Oxygen Mono', sans-serif;
		padding-top:10px;
		padding-bottom: 10px;
		/*border: 2px solid #777;*/

}

.code {
	white-space: pre-wrap;
	font-size: 6px
}
img {
	width:280px;
	margin: 0 auto;
}

.piece {
	text-align: center;
}

/*
.original {
	float:left;
	margin-right: 5px;
}

.recode {
	float: left;
}
*/
.credit {
	font-size: 16px;
}

#logo {
			padding-top: 10px;

	width: 374px;
	margin: 0 auto;
	border-bottom: 2px dotted black;

	padding-bottom: 5px;
	margin-bottom: 15px;
	text-align: center;
}

#logo p {
	margin-bottom: 0px;
}

#num {
	font-size: 80%;
}

#logo img {
	width: 50px;
}

#deets {
	border-top: 2px dotted #000;
		/*border-bottom: 2px dotted #000;*/
		margin-top: 5px;
		font-size: 12px;
		font-style: italic;
		font-weight: bold;

}

</style>
</head>
<body>
<div id="logo">
<img width="280px" src="http://recode-printer.herokuapp.com/icon-bw.png"/>
<p>THE RECODE PROJECT <span id="num"><%= @piece.delivery_order %> / 52</span></p>
</div>
<div class="piece">
<div class="original">
<img class="dither" width="280px" src="<%= @piece.original_image_url %>" />
<p class="credit"><b><%= @piece.title %></b><br/>
<em><%= @piece.artist %> - <%= @piece.year %></em>	
</p>
</div>
<div class="recode">
<img class="dither" width="280px" src="<%= @piece.recode_image_url %>" />
<p class="credit"><em>Recoded by<br/><%= @piece.recoder %> - <%= @piece.recode_created_at.strftime("%Y") %></em></p>

</div>
<!--
<br style="clear:both" />
<div class="code">
	<%= @piece.recode_source_code %>
</div>
-->
<div id="deets">
	<p>SEE THE CODE: <%= @piece.shortened_recode_url %><br/>
	   SEE OTHER RECODES: <%= @piece.shortened_piece_url %>
	</p>
</div>
</div>
</body>
</html>